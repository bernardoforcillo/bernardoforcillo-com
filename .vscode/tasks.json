{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "kubernetes: expose traefik dashboard",
      "type": "shell",
      "command": "kubectl",
      "args": [
        "port-forward",
        "-n",
        "kube-system",
        "$(kubectl",
        "-n",
        "kube-system",
        "get",
        "pods",
        "--selector",
        "\"app.kubernetes.io/name=traefik\"",
        "--output=name)",
        "9000:9000"
      ],
      "icon": {
        "id": "dashboard",
        "color": "terminal.ansiBlue"
      }
    },
    {
      "label": "podman: build container",
      "type": "shell",
      "command": "podman",
      "args": [
        "build",
        "-t",
        "bernardoforcillo/bernardoforcillo-com",
        "-f=apps/www/Dockerfile",
        "."
      ],
      "problemMatcher": {
        "owner": "podman",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1
        },
        "source": "podman",
        "applyTo": "allDocuments",
        "severity": "error"
      }
    },
    {
      "label": "podman: run container",
      "type": "shell",
      "command": "podman",
      "args": [
        "run",
        "--rm",
        "-it",
        "-p",
        "3080:3080",
        "--network=host",
        "bernardoforcillo/bernardoforcillo-com"
      ],
      "problemMatcher": {
        "owner": "podman",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1
        },
        "source": "podman",
        "applyTo": "allDocuments",
        "severity": "error"
      }
    },
    {
      "label": "podman: build and run container",
      "type": "shell",
      "dependsOn": ["podman: build container", "podman: run container"],
      "dependsOrder": "sequence",
      "problemMatcher": {
        "owner": "podman",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*)$",
          "file": 1
        },
        "source": "podman",
        "applyTo": "allDocuments",
        "severity": "error"
      }
    }
  ]
}
